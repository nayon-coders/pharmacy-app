<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPharmacy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme.MyPharmacy.Widget.SearchView" parent="Theme.MyPharmacy">
        <item name="cornerRadius">8dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.MyPharmacy.Dialog" parent="Theme.MyPharmacy">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

</resources>
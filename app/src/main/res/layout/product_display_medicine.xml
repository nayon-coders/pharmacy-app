<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewMedicine"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_order_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewMedicine"
            app:layout_constraintTop_toTopOf="parent">

               <TextView
                android:text="Silvadazin  25g"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/nameMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Reputed"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="@color/color_primary_dark"
                android:id="@+id/brandMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="25.9 Tk"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/color_primary_text"
                android:id="@+id/priceMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <TextView
                    android:textSize="12sp"
                    android:id="@+id/inStock"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/inStock"
                    android:background="@drawable/bg_product_image"
                    android:layout_margin="8dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/buy"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/buy"
                    android:background="@drawable/view_button"
                    android:layout_margin="8dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvDiscountPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:padding="3dp"
        android:text="0.22% OFF"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.cardview.widget.CardView>
